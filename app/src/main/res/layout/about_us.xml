<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#868383">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:text="About"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close_black_24dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:id="@+id/about_app"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This mobile application contains the Dzongkha phrases with English translation and Roman Transcription from Dzongkha English Phrasebook published by Dzongkha Development Commission. Voice recordings of native speaker have also been added for all the phrases.

The app was developed by Ms. Sangay Wangmo (sanglim2012@gmail.com), Mr. Ugyen Thinley(ugyenthinllay@gmail.com), Mr. Arjun Sarki(arksij629@gmail.com) and Mr. Thinley Jamtsho(thinlez7karscl707@gmail.com) of College of Science and Technology with support from Dzongkha Development Commission, as final year project for undergraduate course."

            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/about_app"/>
    </RelativeLayout>
</RelativeLayout>